# Production Environment Configuration
# Copy this file to .env and fill in the actual values

# JWT Secret (use a strong, random 256-bit key)
JWT_SECRET=your_production_jwt_secret_here

# Database
MONGODB_URI=mongodb://localhost:27017/luxhedge_production
MONGO_URI=mongodb://localhost:27017/luxhedge_production

# Server Configuration
PORT=5001
NODE_ENV=production

# API URLs
API_BASE_URL=https://your-domain.com/api
BACKEND_URL=https://your-domain.com
FRONTEND_URL=https://your-domain.com
API_URL=https://your-domain.com/api

# Email Configuration (SMTP)
EMAIL_HOST=smtp.your-provider.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@domain.com
EMAIL_PASS=your-email-password
EMAIL_FROM=noreply@your-domain.com

# reCAPTCHA
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# AWS S3 Configuration
S3_BUCKET=your-s3-bucket-name
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# File Upload Configuration
SUPPORT_MAX_FILE_SIZE=10485760

# External APIs
HUGGINGFACE_API_KEY=your_huggingface_api_key
BOT_SOCKET_URL=wss://your-bot-socket-url

# Security Headers (optional overrides)
# HELMET_CSP_DIRECTIVES=default-src 'self'
# CORS_ORIGIN=https://your-domain.com