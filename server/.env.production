# Production Environment Configuration
# Database
MONGODB_URI=mongodb://admin:your_mongo_password@localhost:27017/luxhedge_production?authSource=admin
MONGO_ROOT_PASSWORD=your_secure_mongo_password

# Redis
REDIS_PASSWORD=your_secure_redis_password
REDIS_URL=redis://:your_secure_redis_password@localhost:6379

# Server Configuration
NODE_ENV=production
PORT=5001
JWT_SECRET=your_super_secure_jwt_secret_key_here_minimum_32_characters
JWT_EXPIRES_IN=7d

# Domain Configuration
FRONTEND_URL=https://yourdomain.com
BACKEND_URL=https://api.yourdomain.com

# Email Configuration (Choose one provider)
# Gmail SMTP
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# SendGrid (Alternative)
# SENDGRID_API_KEY=your_sendgrid_api_key
# FROM_EMAIL=noreply@yourdomain.com

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/server/uploads

# Crypto API Keys (Optional)
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key
BINANCE_API_KEY=your_binance_api_key
BINANCE_SECRET_KEY=your_binance_secret_key

# AI Features
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# SSL Configuration
SSL_CERT_PATH=/etc/ssl/certs/yourdomain.crt
SSL_KEY_PATH=/etc/ssl/private/yourdomain.key

# Monitoring
ENABLE_MONITORING=true
LOG_LEVEL=info

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30